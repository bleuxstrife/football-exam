<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/match_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@android:color/holo_orange_dark"
                android:text="Sab, 29 Maret 2018" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_home_team"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:layout_height="match_parent"

                    />

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:text="vs"/>

                <ImageView
                    android:id="@+id/img_away_team"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_team"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Manchester United"/>

                <TextView
                    android:id="@+id/score"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="vs"/>

                <TextView
                    android:id="@+id/away_team"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Manchester United"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_goals"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="left|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center_horizontal|top"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:text="Goals"/>

                <TextView
                    android:id="@+id/away_goals"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="right|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_shots"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="left|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center_horizontal|top"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:text="Shots"/>

                <TextView
                    android:id="@+id/away_shots"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="right|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="left|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center_horizontal|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="Lineup"/>

                <TextView
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="right|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_goalkeeper"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="left|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center_horizontal|top"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:text="Goal Keeper"/>

                <TextView
                    android:id="@+id/away_goalkeeper"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="right|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_defense"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="left|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center_horizontal|top"
                    android:layout_height="match_parent"

                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:text="Defense"/>

                <TextView
                    android:id="@+id/away_defense"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="right|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_midfield"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="left|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center_horizontal|top"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:text="Midfield"/>

                <TextView
                    android:id="@+id/away_midfield"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="right|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_forward"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="left|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center_horizontal|top"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:text="Forward"/>

                <TextView
                    android:id="@+id/away_forward"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="right|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_sub"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="left|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="center_horizontal|top"
                    android:layout_height="match_parent"

                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:text="Subtitutes"/>

                <TextView
                    android:id="@+id/away_sub"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:gravity="right|top"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>